<div class="form_styling">

  <table id="table">
    <%= form_for @user do |t| %>
      <tr>
        <th><%= t.label :first_name %></th>
        <td><%= t.text_field :first_name %></td>
      </tr>
      <tr>
        <th><%= t.label :last_name %></th>
        <td><%= t.text_field :last_name %></td>
      </tr>
      <tr>
        <th><%= t.label :email %></th>
        <td><%= t.text_field :email %></td>
      </tr>
      <tr>
        <td><%= t.label :password %></td>
        <td><%= t.text_field :password %></td>
      </tr>
      <tr>
        <td><%= t.submit 'Register' %></td>
      </tr>
    <% end %>
  </table>

</div>