<div class="centered">

  <h1>Book a Session</h1>

  <% @appointments.each do |appointment| %>
    <li>
      <%= form_for appointment do |f| %>

        <%= appointment.time.strftime("%A, %B %e, %Y %l:%M%P") %> - <%= appointment.language %>
        <%= f.submit 'Book Session' %>
      <% end %>


    </li>
  <% end %>
</div>